<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary"

>
    <ImageView
            android:layout_width="312dp"
            android:layout_height="185dp" app:srcCompat="@drawable/bmi_pic"
            android:id="@+id/imageView"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" app:layout_constraintVertical_bias="0.052"/>
    <Button
            android:text="@string/bmi_main_count_text"
            android:layout_width="315dp"
            android:id="@+id/wylicz"
            android:background="@drawable/button_style" android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/bmi_main_weight_cm"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/puzo"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@+id/dataPuzo" android:layout_marginEnd="4dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.961"/>
    <TextView
            android:text="@string/bmi_main_name"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/imie"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@+id/dataImie"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.986"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/rost"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dataPuzo"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark" android:maxLength="3"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/bmi_main_height_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rost"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@+id/dataRost"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.987"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/puzo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/dataRost"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:maxLength="3" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/dataPuzo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/dataImie"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textPersonName" android:maxLength="8"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/dataRost"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintVertical_bias="0.166"/>
    <TextView
            android:layout_width="231dp"
            android:layout_height="79dp"
            android:id="@+id/wynik" android:textColor="@color/colorAccent"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textColorLink="@android:color/black"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/details"
    />
    <ImageButton
            android:layout_width="66dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_menu_send"
            android:id="@+id/details"
            android:background="@drawable/button_style"
            android:visibility="invisible" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/wynik"
            app:layout_constraintVertical_bias="0.913"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.6"/>
</android.support.constraint.ConstraintLayout>